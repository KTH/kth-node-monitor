{
  "name": "@kth/monitor",
  "version": "3.0.0",
  "description": "Helper for monitor page checks.",
  "automaticPublish": "true",
  "main": "lib/monitorUtil.js",
  "author": {
    "name": "KTH",
    "email": "infosys@kth.se",
    "url": "https://github.com/KTH"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "uri": "https://github.com/KTH/kth-node-monitor"
  },
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:notify": "jest --watch --notify",
    "test:coverage": "rm -rf ./coverage && jest --collectCoverage --detectOpenHandles",
    "build": "./build.sh",
    "linting": "eslint .",
    "linting:fix": "eslint . --fix",
    "prepare": "if [ -f ./node_modules/.bin/husky ]; then husky install; fi"
  },
  "devDependencies": {
    "@kth/eslint-config-kth": "^2.0.2",
    "@types/jest": "^27.0.3",
    "eslint": "^8.8.0",
    "husky": "^7.0.4",
    "jest": "^27.4.5",
    "prettier": "^2.5.1",
    "pretty-quick": "^3.1.3"
  },
  "jshintConfig": {
    "maxerr": 5
  },
  "dependencies": {
    "@kth/in-memory-cache": "^0.1.39",
    "@kth/log": "^4.0.0"
  },
  "prettier": {
    "//": "configuration version 2020-04-10 - might also reside in .prettierrc.json",
    "arrowParens": "avoid",
    "printWidth": 120,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "jest": {
    "//": "configuration version 2020-04-10 (API+NPM) - might also reside as module.exports in jest.config.js",
    "clearMocks": true,
    "notifyMode": "failure-change",
    "testEnvironment": "node",
    "verbose": true
  }
}
